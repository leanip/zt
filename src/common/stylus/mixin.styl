border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    height: 0
    width: 100%
    border-top: 1px solid $color
    content: ''

border-top-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 0
    border-top: 1px solid $color
    content: ''

border-none()
  &:after
    display: none